<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/bgClContainer"
    android:clickable="true"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="5dp"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bgTvImage"
        android:layout_marginHorizontal="20dp"
        android:layout_width="350dp"
        android:adjustViewBounds="true"
        android:layout_height="350dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bgTvIndex"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginRight="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bgTvImage" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/bgTvIndex"
        app:layout_constraintTop_toBottomOf="@id/bgTvImage">

        <TextView
            android:id="@+id/bgTvChannelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Habertürk" />

        <TextView
            android:id="@+id/bgTvTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Haberin topiği"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bgTvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="34dk önce" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>